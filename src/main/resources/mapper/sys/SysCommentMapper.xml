<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cy.res.sys.dao.CommentDao">
	<insert id="insert">
		insert into comment(comment_content,comment_core,product_id,user_id,
		createdTime,modifiedTime,createdUser,modifiedUser
		)values(
		#{commentContent},#{commentCore},#{productId},#{userId},
		#{createdTime},#{modifiedTime},#{createdUser},#{modifiedUser});
	</insert>
	<select id="findCommentByProductId" resultType="com.cy.res.sys.dao.CommentDao">\
		select * from comment where productId=#{productId}
	</select>
</mapper>




